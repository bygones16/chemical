<h1>新規在庫登録</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@chem) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :chemical_name, '品名' %>
        <%= f.text_field :chemical_name,:placeholder => "薬品名を入力下さい。", class: 'form-control' %>
      </div>

      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
