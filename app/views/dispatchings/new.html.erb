<h1><%= @chem.chemical_name%>の出庫</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for([@chem,@dispatching]) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :dispatching_number, '出庫数' %>
        <%= f.text_field :dispatching_number,:placeholder => "出庫数を半角数値で入力下さい。", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :dispatching_person, '出庫者' %>
        <%= f.text_field :dispatching_person,:placeholder => "出庫者を入力下さい。", class: 'form-control' %>
      </div>
      
      <%= f.submit '出庫', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
